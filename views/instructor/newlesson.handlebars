<h2>Add Lessions</h2>

<form 
	id="regForm" method="post"
    action="/instructors/classes/{{class_id}}/lessons/new"
	enctype="multipart/form-data">
	
	<div>
		<label>Lesson number: </label>
		<input type="text" name="lesson_number">
	</div><br />

    <div>
		<label>Lesson Title: </label>
		<input type="text" name="lesson_title">
	</div><br />

    <div>
		<label>Lesson body: </label>
		<textarea type="text" name="lesson_body"></textarea>
	</div><br />

	<div class="block">
		<label for="">Upload a File :</label>
		 <div class="row">
             <input type="file" name="lesson_file" />
          </div>
	</div>
	
	<div>
		<input type="submit" value="ADD Lesson ">
	</div>
</form>