<h2>Create An Account</h2>

{{#if errors}}
	{{#each errors}}
		<div class="alert alert-danger" role="alert"> <i class="icon-remove-sign icon-large"></i>
			{{msg}}
			<a href="#close" class="icon-remove"></a>
		</div>
	{{/each}}
{{/if}}

<form id="regForm" method="post" action="/users/register">
	<div class="form-group col-md-4" >
		<label>Account Type</label>
		<select name="type" class="form-control">
			<option value="student">Student</option>
			<option value="instructor">Instructor</option>
		</select>
	</div>
	<br />

	<hr>

	<div class="row">
    <div class="col">
      <label>First Name: </label>
		<input type="text" name="first_name" class="form-control" value="{{first_name}}">
    </div>
    <div class="col">
     <label>Last Name: </label>
		<input type="text" name="last_name" class="form-control" value="{{last_name}}">
    </div>
  </div>

	<div class="row">
    <div class="col">
      <label>Email Address: </label>
		<input type="text" name="email" class="form-control" value="{{email}}">
    </div>
    <div class="col">
	<label>Username: </label>
		<input type="text" name="username" class="form-control" value="{{username}}">
    </div>
  </div>



<hr>


	<h4>Adresse :</h4>

	<div class="row">
		<div class="col">
			<label>Street Address: </label>
		<input type="text" name="street_address" class="form-control" value="{{street_address}}">
		</div>
		<div class="col">
			<label>City: </label>
			<input type="text" name="city" class="form-control" value="{{city}}">
		</div>
		<div class="col">
			<label>State: </label>
			<input type="text" name="state" class="form-control" value="{{state}}">
		</div>
		<div class="col">
			<label>Zip: </label>
		<input type="number" name="zip" class="form-control" value="{{zip}}">
		</div>
	
	</div>

<hr>

<h4>Password Confirmation :</h4>

<div class="row">
    <div class="col">
		<label> <b>Password:</b>   </label>
    <input type="password" name="password" class="form-control" value="{{password}}">
    </div>
    <div class="col">
		<label> <b>Password Confirm:</b>	  </label>
      	<input type="password" name="password2" class="form-control" value="{{password2}}">
    </div>
  </div>


	

	<div>
		<input type="submit" class="btn btn-primary" value="Signup">
	</div>
</form>